<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/AppBar"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/colorPrimaryDark">
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/SearchViewStyle"
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/searchvw"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsearchorder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_search_black_24dp"
            android:backgroundTint="@color/white"
            android:visibility="visible" />
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AppBar"
        android:background="@color/AtlantaThemeBlue"
        android:backgroundTint="@color/AtlantaThemeBlue"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="#77a3a7"
        >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbitemunbilled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un Billed">
            <GridView
                android:fontFamily="@font/nunito_regular"
                android:layout_width="match_parent"
                android:id="@+id/grdunbilled"
                android:layout_height="match_parent"
                android:layout_below="@+id/AppBar"
                android:padding="10dp"/>
        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbitembilled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billed">
            <GridView
                android:fontFamily="@font/nunito_regular"
                android:layout_width="match_parent"
                android:id="@+id/grdbilled"
                android:layout_height="match_parent"
                android:layout_below="@+id/AppBar"
                android:padding="10dp"/>
        </com.google.android.material.tabs.TabItem>

    </com.google.android.material.tabs.TabLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="50dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/NewOrderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnneworder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/newordericon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnneworder"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nunito_regular"
                android:text="New Order" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>