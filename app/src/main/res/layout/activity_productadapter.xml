<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtproductname"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:text="Sample"
                android:textColor="#090909"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtprditemdesription"
                android:layout_width="wrap_content"
                android:layout_below="@id/txtproductname"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:text="Item Description"
                android:textColor="#090909"
                android:textSize="18sp"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/txtprdsalesratecap"
                android:layout_width="wrap_content"
                android:layout_below="@id/txtprditemdesription"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:text="Sales Rate :"
                android:textColor="#090909"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                 />
            <TextView
                android:id="@+id/txtprdsalesrate"
                android:layout_width="wrap_content"
                android:layout_below="@id/txtprditemdesription"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtprdsalesratecap"
                android:fontFamily="sans-serif"
                android:gravity="right"
                android:text="0.00"
                android:textColor="#090909"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/txtprdunit"
                android:layout_width="wrap_content"
                android:layout_below="@id/txtprdsalesrate"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:text="--"
                android:textColor="#090909"
                android:textSize="18sp"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/imgproduct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/nogroup" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>